generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserType {
  ADMIN
  COMPANY
  INTERN
}

model User {
  id        String     @id @default(cuid())
  email     String     @unique
  name      String
  type      UserType?
  jobs      Job[]
  tags      Tag[]
  interests Interest[]
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}

model Job {
  id          String     @id @default(cuid())
  title       String
  description String
  location    String
  user        User       @relation(fields: [userId], references: [id])
  userId      String
  tags        Tag[]
  interests   Interest[]
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}

model Tag {
  id    String @id @default(cuid())
  name  String
  jobs  Job[]
  users User[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Interest {
  id     String @id @default(cuid())
  name   String
  users User[]
  jobs   Job[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
